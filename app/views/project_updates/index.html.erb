<p id="notice"><%= notice %></p>

<h1>Listing Project Updates</h1>

<table>
  <thead>
    <tr>
      <th>Project</th>
      <th>Description</th>
      <th>Delete flag</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @project_updates.each do |project_update| %>
      <tr>
        <td><%= project_update.project_id %></td>
        <td><%= project_update.description %></td>
        <td><%= link_to 'Show', project_update %></td>
        <td><%= link_to 'Edit', edit_project_update_path(project_update) %></td>
        <td><%= link_to 'Destroy', project_update, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

