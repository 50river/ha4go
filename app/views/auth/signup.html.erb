<div class="container">
    <h2 class="form-signin-heading">新規登録</h2>
    <button class="btn btn-lg btn-primary" type="submit">Facebookで登録する</button>
    
    <%= form_tag signup_check_path, :method => :post do %>
        <h4 class="mt50">もしくはEメールアドレスで登録</h4>
        <%= text_field :signup, :email, :type => "email", :class => 'form-control mb10', :placeholder => 'Email Address' %>
        <%= text_field :signup, :password, :type => 'password', :class => 'form-control', :placeholder => 'Password' %>
        <div class="checkbox">
            <label>
                <input type="checkbox" value="remember-me"> Remember me
            </label>
        </div>
        <button class="btn btn-lg btn-primary" type="submit">登録</button>
    <% end %>
    <p class="mt20 text-right">>>すでにアカウントを持っている方は<%= link_to('ログイン', login_path, :class => 'ml5') %></p>
</div>
